# API Configuration
APP_NAME="Halal Contract API"
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/halal_contracts

# Redis (for caching & rate limiting)
REDIS_URL=redis://localhost:6379/0

# AI Provider (choose one: openai, anthropic, gemini, groq)
AI_PROVIDER=gemini

# API Keys (only need one based on provider)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here
GROQ_API_KEY=your-groq-key-here

# AI Model Settings
# OpenAI: gpt-4-turbo-preview, gpt-4o
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229
# Gemini: gemini-1.5-flash (free), gemini-1.5-pro
# Groq: llama-3.1-70b-versatile, mixtral-8x7b-32768
AI_MODEL=gemini-1.5-flash
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3

# Security
SECRET_KEY=your-super-secret-key-change-this
API_KEY_HEADER=Authorization
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# PDF Report
COMPANY_NAME="Halal Contract API"
COMPANY_WEBSITE="https://halalcontract.com"
